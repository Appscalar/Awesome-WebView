<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="me.ciwix.awesome_webview.Offline">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="You seem to be offline"
        android:id="@+id/offline_headline"
        android:textSize="20dp"
        android:layout_marginBottom="149dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please check your connection and try again"
        android:id="@+id/offline_text"
        android:textSize="16dp"
        android:layout_marginTop="32dp"
        android:layout_alignTop="@+id/offline_headline"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retry"
        android:id="@+id/offline_button"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/offline_text"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/radio"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/offline_headline"
        android:paddingBottom="25dp"
        android:paddingTop="25dp"/>
</RelativeLayout>
